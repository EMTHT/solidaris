<div class="show-container">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center">
        <div class="show-association-wrap">
          <div>
            <%= cl_image_tag @association.logo, class: "show-association-logo" %>
          </div>
        </div>
        <div class="banner-mission">
          <div class="banner-mission-content">
            <h3><%= @association.name %></h3>
          </div>
        </div>
        <div class="page-metas" >
          <div class="meta-item " > <%= @association.total_volunteers %> bénévoles</div>
          <div class="meta-item " > <%= @association.category %> </div>
          <div class="meta-item " > <%= @association.creation_year %> </div>
        </div>
      </div>
    </div>
  </div>
  <div class="first-background-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="banner-mission-content">
          <h2>Description</h2>
          <p><%= @association.description %></p>
        </div>
      </div>
    </div>
  </div>
<br><br>
  <div class="image-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="image-grid">
          <div class="big-image" style=" background-image: url('<%= cl_image_path("mpnrcwlglxzxld1eigod.jpg") %>')"></div>

          <div class="top-small-image" style=" background-image: url('<%= cl_image_path("dkcrbkcfdynqryf199kj.jpg") %>')"></div>

          <div class="bottom-small-image"
          style=" background-image: url('<%= cl_image_path("ccgdavcyhlpzmvdrdhkd.jpg") %>')"></div>
        </div>
      </div>
    </div>
  </div>
<br><br>
</div>

<div class="other-container"></div>
  <div class="mission-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Nos missions à pourvoir</h2>
        <div class="row">
          <% @association.missions.each do |mission| %>
            <div class="col-xs-12 col-md-6">
              <div class="missions-cards">
                <%= link_to mission_path(mission) do %>
                  <%= svg_div(mission.category) %>
                  <h2><%= mission.title %></h2>
                  <p><%= mission.organization.name%></p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
