<h1>Cr√©er une mission</h1>


<div class="container"></div>
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
    <%= simple_form_for [@organization, @mission], url:new_organizations_mission_path(@mission)  do |f| %>
      <%= f.input :title %>
            <%= f.input :status, collection: Post::STATUSES, prompt: "Which status" %>
      <%= f.input :category %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :skills_needed %>
      <%= f.input :volunteers_needed %>
      <input type="hidden" name="post[category_ids][]" value="">
      <div class="category-choices">
        <% Mission.category.all.each do |category| %>
          <input type="checkbox" class="hidden" value="<%= category.id %>" name="post[category_ids][]" id="post_category_ids_<%= category.id %>">
          <label for="post_category_ids_<%= category.id %>">
            <%= category %>
            <i class="fa fa-check"></i>
          </label>
        <% end %>
       </div>

      <%= f.submit "Enregistrer mes modifications", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>

