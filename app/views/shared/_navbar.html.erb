<% if controller_name == "missions" && action_name == "show" %>
    <div class="navbar-wagon-show gradient-<%=@mission.category.downcase %>">
      <%= link_to missions_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "motivation.svg", height: 50 %>"
      <% end %>

<% elsif controller_name == "organizations/missions" && action_name == "index" %>
  <div class="navbar-wagon data-scroll-header scroll">
      <%= link_to missions_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "fist.png", height: 50 %>
      <% end %>

<% elsif controller_name == "missions" && action_name == "index" %>
    <div class="navbar-wagon">
      <%= link_to missions_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "fist.png", height: 50 %>
      <% end %>

<% else %>
    <div class="navbar-wagon">
      <%= link_to missions_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "fist.png", height: 50 %>
      <% end %>
<% end %>
<!-- <div class="navbar-wagon"> -->
  <!-- Logo -->
  <%#= link_to missions_path, class: "navbar-wagon-brand" do %>
    <%#= image_tag "fist.png", height: 50 %>
  <%# end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Missions", missions_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Associations", associations_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Tableau de Bord", account_missions_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Profil", account_profile_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
      <% end %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= cl_image_tag current_user.picture, class: "avatar dropdown-toggle", id: "navbar-wagon-menu1", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu" aria-labelledby="navbar-wagon-menu1">
            <li>
              <%= link_to account_profile_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>


    <% elsif organization_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Créer un Délit", new_organizations_mission_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Tableau de Bord", organizations_missions_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Mon profil", '#', class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to destroy_organization_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
      <% end %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if current_organization.logo.nil? %>
            <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <%= cl_image_tag current_organization.logo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %>
          <!-- # "http://kitt.lewagon.com/placeholder/users/ssaunier" -->
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu" aria-labelledby="navbar-wagon-menu" >
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_organization_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->

      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Se connecter
      </button>
      <%#= link_to t(".sign_in", default: "Login-user"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%#= link_to t(".sign_in", default: "Login-org"), new_organization_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Connexion</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Souhaitez-vous vous connecter en tant qu'utilisateur ou association ?
      </div>
      <div class="modal-footer">
        <%= link_to new_user_session_path do %>
          <button type="button" class="btn btn-primary">Utilisateur</button>
        <% end %>
        <%= link_to new_organization_session_path do %>
          <button type="button" class="btn btn-primary">Organisation</button>
        <% end %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>
