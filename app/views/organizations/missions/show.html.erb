<div class="show-container-asso gradient-<%=@mission.category.downcase %>">
  <div class="first-background-container">
    <div class="row">
      <div class="col-md-5 col-md-offset-1">
        <div class="banner-mission-content">
          <h1><%= @mission.title %></h1>
          <div class="page-metas" >
            <div class="meta-item " > <%= @mission.volunteers_needed %> volontaires demandées</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="background-container">
    <div class="row">
            <div class="col-md-5 col-md-offset-1">
              <div class="banner-mission-content-asso">
                <h2>Description</h2>
                <p><%= @mission.description %></p>
                <h2>Peine encourue</h2>
                <p> 2 demi-journées par semaine pendant 6 mois </p>
                <h2>Profil recherché <h2>
                  <% if @mission.skills_needed.nil? || @mission.skills_needed == "0" %>
                    <p> Aucun profil particulier recherché</p>
                  <% else %>
                    <p><%= @mission.skills_needed %></p>
                  <% end %>
                <br><br>
              </div>
            </div>
        <div class="move">
          <div class="col-md-4 col-md-offset-1">
            <% if @users.empty? %>
            <h2> Vous n'avez pas encore de candidats pour cette mission</h2>
            <% else %>
            <h2>Candidat(s)</h2>
            <% @users.each do |user| %>
              <div class="banner-mission-organization-2">
                  <h4 class= "text-justify"><%= user.first_name %> <%= user.last_name %></h4r>
                  <p class= "text-center"><%= user.phone_number %></p>
                  <p class="text-center"><%= user.email %></p>
                  <p class= "button-hover"><%= link_to "En savoir plus", associations_path(@organization) %> </p>
              </div>
            <% end %>
          <% end %>
          </div>
        </div>

    </div>

</div>
