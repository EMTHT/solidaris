            <div class="stat">
              <h3>8</h3>
              <p>besoins récurrents</p>
            </div>
          </div>
      </div>
    </div> -->
    <div class="wrapper-right">
        <div class="container-grey-right">
          <h4>Besoins en cours </h4>
          <div class="flex-container">
            <% if @recurrent_current.present? %>
              <% @recurrent_current.reverse_each do |mission| %>
                  <div class="missions-cards-dashboard">
                    <%= link_to organizations_mission_path(mission) do %>
                      <%= index_svg_div(mission.category) %>
                      <h2><%= mission.title %></h2>
                      <p><%= mission.organization.name%></p>
                      <div class="border-bottom gradient-<%=mission.category.downcase%>"></div>
                      <div class="overlay gradient-<%=mission.category.downcase%>">
                        <%= white_svg_div(mission.category) %>
                        <h3><%= mission.title %></h3>
                        <h4><%= mission.organization.name%></h4>
                        <h5><%= l(mission.starting_at, format: :short) %></h5>
                      </div>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <div class="container-grey-right-bottom">
        <h4>Prochains besoins </h4>
        <div class="flex-container">
          <% @coming.reverse_each do |mission| %>
            <%= link_to organizations_mission_path(mission) do %>
              <div class="mini-card-container">
                <div class="mini-card-description">
                  <%= mini_svg_div(mission.category) %>
                  <h2><%= mission.title %></h2>
                  <p><%= mission.organization.name %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
